<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_rider_image"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/product_img"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/_1sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_rider_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:fontFamily="@font/suzuki_pro_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Rider Name"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btn_rider_assign"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:background="@drawable/all_btns_bkg"
            android:fontFamily="@font/suzuki_pro_regular"
            android:padding="@dimen/_5sdp"
            android:text="Assign"
            android:textColor="#fff"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>

</LinearLayout>