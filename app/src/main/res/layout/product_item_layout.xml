<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_background"
        android:elevation="@dimen/_5sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_prodview_image"
                 android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/product_img"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/_1sdp" />


            <TextView
                android:id="@+id/tv_prodview_not_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/top_bottom_right_red"
                android:fontFamily="@font/suzuki_pro_regular"
                android:padding="7dp"
                android:paddingEnd="12dp"
                android:text="Not Approved"
                android:textColor="#ffffff"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/tv_prodview_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/top_bottom_right_green"
                android:fontFamily="@font/suzuki_pro_regular"
                android:padding="7dp"
                android:paddingEnd="12dp"
                android:text="Approved"
                android:textColor="#ffffff"
                android:textSize="@dimen/_9sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toEndOf="@+id/civ_prodview_image"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_prodview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Product Name"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv_prodview_unit_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/suzuki_pro_regular"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Rs.145 /- kg"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>