<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:weightSum="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hmv_order_history_image"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/product_img"
            app:civ_border_color="@color/black"
            app:civ_border_width="@dimen/_1sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_order_history_rider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/suzuki_pro_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Rider Name"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_order_history_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/suzuki_pro_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Delivered to Syed Muhammad Mubashir Ali Zaidi"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_order_history_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/suzuki_pro_regular"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="23-Jul-2020"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_history_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.6"
            android:fontFamily="@font/suzuki_pro_regular"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="Rs.200"
            android:textAlignment="textEnd"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/suzuki_pro_regular"

            android:paddingBottom="@dimen/_1sdp"
            android:text="Orders:"
            android:textAlignment="textEnd"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_order_history_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.3"
            android:fontFamily="@font/suzuki_pro_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="1x Shawarma Lovers , 1x Soft Drinks , 1x Spicy Italian Pizza"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <TextView

        android:id="@+id/tv_order_history_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/suzuki_pro_regular"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_1sdp"
        android:text="Status: 1x Shawarma Lovers , 1x Soft Drinks , 1x Spicy Italian Pizza"
        android:textColor="@color/green"
        android:textSize="@dimen/_12sdp" />
    <LinearLayout
        android:id="@+id/ll__order_history_approval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_order_history_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@drawable/all_btns_bkg"
            android:fontFamily="@font/suzuki_pro_regular"
            android:padding="@dimen/_5sdp"
            android:text="ASSIGN RIDER"
            android:textColor="#fff"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>
</LinearLayout>